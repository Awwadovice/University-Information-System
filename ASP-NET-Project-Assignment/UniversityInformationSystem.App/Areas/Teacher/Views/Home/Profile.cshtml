@model UniversityInformationSystem.Models.ViewModels.Teacher.TeacherProfileViewModel
@{
    ViewBag.Title = "Profile";
}

<div class="container-fluid">
    <div class="jumbotron">
        <div style="text-align: center">
            <div>
                FIRST NAME: <strong>@Model.FirstName</strong>
            </div>
            <div>
                LAST NAME: <strong>@Model.LastName</strong>
            </div>
            <div>
                BIRTH DATE: <strong>@Model.BirthDate.ToString("dd/MM/yyyy")</strong>
            </div>
            <div>
                USERNAME: <strong>@Model.UserName</strong>
            </div>
            <div>
                LEADING COURSES COUNT: <strong>@Model.LeadingCoursesCount</strong>
            </div>
            <div>
                STUDENTS COUNT: <strong>@Model.StudentsCount</strong>
            </div>
        </div>

    </div>
</div>

