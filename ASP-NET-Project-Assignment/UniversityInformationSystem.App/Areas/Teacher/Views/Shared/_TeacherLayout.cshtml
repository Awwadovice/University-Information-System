<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/kendo-css")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/kendo")
</head>
<body>
<div class="navbar navbar-default navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("University Information System", "Login", "Account", new { area = "Teacher" }, new { @class = "navbar-brand" })
        </div>
        @Html.Partial("_TeacherPartial")
    </div>
</div>

<div class="sidebar">
    @Html.Partial("_TeacherSidebar")
</div>

<div class="main">
    @RenderBody()
    <footer>
        <p>&copy; @DateTime.Now.Year - University Information System (Made By Kiril Kirilov)</p>
    </footer>
</div>

    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
